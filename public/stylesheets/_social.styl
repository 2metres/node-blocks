email     = #9b59b6
twitter   = #00ACED
instagram = #f1c40f
dribbble  = #ea4c89
github    = #1abc9c
pinterest = #e74c3c
linkedin  = #3498db
rdio      = #008fd5

.social
  margin-top 20px

  li
    display inline-block
    margin-left 25px

    &:first-child
      margin 0

    a
      font-size 240%
      text-decoration none
      color dimgrey
      font-family 'fontello', display
      text-shadow 0 1px 0 darken(dimgrey, 70%)
      transition color 300ms ease-out, text-shadow 300ms ease-in-out

  .email a:hover
    color email
    text-shadow 0 1px 2px rgba(0,0,0,0.7),
                0 1px 0 darken(email, 40%)

  .twitter a:hover
    color twitter
    text-shadow 0 1px 2px rgba(0,0,0,0.7), 
                0 1px 0 darken(twitter, 40%)

  .instagram a:hover
    color instagram
    text-shadow 0 1px 2px rgba(0,0,0,0.7), 
                0 1px 0 darken(instagram, 40%)

  .dribbble a:hover
    color dribbble
    text-shadow 0 1px 2px rgba(0,0,0,0.7),
                0 1px 0 darken(dribbble, 40%)

  .github a:hover
    color github
    text-shadow 0 1px 2px rgba(0,0,0,0.7), 
                0 1px 0 darken(github, 40%)

  .pinterest a:hover
    color pinterest
    text-shadow 0 1px 2px rgba(0,0,0,0.7), 
                0 1px 0 darken(pinterest, 40%)

  .linkedin a:hover
    color linkedin
    text-shadow 0 1px 2px rgba(0,0,0,0.7), 
                0 1px 0 darken(linkedin, 40%)

  .rdio a:hover
    color rdio
    text-shadow 0 1px 2px rgba(0,0,0,0.7), 
                0 1px 0 darken(rdio, 40%)
