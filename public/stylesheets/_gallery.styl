.gallery
  position relative
  width 100%
  margin 0 auto
  transition opacity 700ms ease-in

  &.iphone
    padding-bottom: 100%

    .frame
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      margin 23% 29% 2.9% 29%
      background #3a2837
      border 3px #141313 solid
      border-radius 3px

    &.white
      background-image url('/images/gallery-iphone5-white.png')
      background-size cover

    &.black
      background-image url('/images/gallery-iphone5-black.png')
      background-size cover

  &.ipad
    padding-bottom: 100%

    .frame
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      margin 19% 20% 1.2% 20%
      background #3a2837
      border 3px #141313 solid
      border-radius 3px

    &.white
      background-image url('/images/gallery-ipad-mini-white.png')
      background-size cover

    &.black
      background-image url('/images/gallery-ipad-mini-black.png')
      background-size cover

  &.desktop
    padding-bottom: 100%
    background-image url('/images/gallery-apple-screen.png')
    background-size cover
    margin-top -150px
    
    .frame
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      margin 38% 7% 13.3% 7%
      background #3a2837
      border 3px #141313 solid
      border-radius 3px

@media (min-width: 720px)

  .project
    .gallery
      width 720px
      padding-bottom 720px

      &.fade-it
        opacity 0
    
      .flexslider .flex-direction-nav li a
        text-indent 0 !important