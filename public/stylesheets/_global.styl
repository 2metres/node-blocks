*
  box-sizing border-box

body
  text-align center
  font-family 'Source Sans Pro', 'HelveticaNeue-Light', sans-serif
  font-weight 300
  min-width 320px
  font-size 18px

img
  max-width 100%

h1, h2, h3, h4, h5
  font-family 'Dosis', 'HelveticaNeue-Light', sans-serif
  font-weight 800
  line-height 100%
  letter-spacing -0.1px
  margin  0.2em 0 0.4em

h1
  font-size 300%

h2
  font-size 200%

h3
  font-size 170%

h4
  font-size 130%

h5
  font-size 100%

@font-face
  font-family: 'fontello';
  src: url('../fonts/fontello.eot?75581819');
  src: url('../fonts/fontello.eot?75581819#iefix') format('embedded-opentype'),
       url('../fonts/fontello.svg?75581819#fontello') format('svg');
  font-weight: normal;
  font-style: normal;

.container
  max-width 540px
  margin 0 auto

.btn
  display inline-block
  border none
  padding 16px 28px
  text-decoration none
  border-radius 8px
  min-width 144px
  margin-top 10px

.btn + .btn
  margin-left 10px

.project
  padding 20px 0 0
  overflow hidden

  p
    line-height 140%
    margin-bottom 0.8em

  .container
    padding 0 1em 2em 1em

.group:after
  content ""
  display table
  clear both

@import '_header'
@import '_gallery'
@import '_social'
@import '_tooltip'
@import '_footer'