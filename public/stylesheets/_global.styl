*
  box-sizing border-box

body
  text-align center
  font-family 'HelveticaNeue-Light', sans-serif
  font-weight 100
  min-width 320px
  font-size 18px
  letter-spacing -0.01em

img
  max-width 100%

h1, h2, h3, h4, h5
  font-family 'Varela Round', 'HelveticaNeue-Light', sans-serif
  font-weight 700
  line-height 100%
  letter-spacing -0.03em
  margin  0.2em 0 0.4em

h1
  font-size 300%

h2
  font-size 240%

h3
  font-size 180%

h4
  font-size 140%

h5
  font-size 120%

@font-face
  font-family 'fontello'
  src url('../fonts/fontello.eot?75581819')
  src url('../fonts/fontello.eot?75581819#iefix') format('embedded-opentype'),
       url('../fonts/fontello.svg?75581819#fontello') format('svg')
  font-weight normal
  font-style normal

.container
  max-width 540px
  margin 0 auto

.btn
  display block
  border none
  padding 16px 28px
  text-decoration none
  border-radius 8px
  min-width 144px
  margin 10px auto 0
  max-width 240px
  font-size 120%
  font-weight 700
  font-family 'Varela Round', 'HelveticaNeue-Light', sans-serif
  letter-spacing -0.05em

.project
  padding 20px 0 0
  overflow hidden

  p
    line-height 140%
    margin-bottom 0.8em

  .container
    padding 0 1em 2em 1em

.group:after
  content ""
  display table
  clear both