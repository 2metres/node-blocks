*
  box-sizing border-box

body
  text-align center
  font-family 'HelveticaNeue', sans-serif

img
  max-width 100%

h1, h2, h3, h4, h5
  font-weight bold
  line-height 110%
  margin  5px 0 10px
  font-family Georgia, serif

h1
  font-size 200%

h2
  font-size 180%

h3
  font-size 160%

h4
  font-size 140%

h5
  font-size 120%

.title
  font-size 280%

.subtitle
  font-size 100%

header
  background white
  padding 20px

article
  padding 20px 0

  &.light
    color #333
    background whitesmoke

  &.dark
    color whitesmoke
    background #222

  &.project
    h3
      padding 0 20px
    p
      padding 0 20px
      line-height 140%

footer
  padding 40px 10px
  background #333
  color whitesmoke
