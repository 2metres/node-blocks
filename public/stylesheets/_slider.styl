.flexslider
  position relative
  margin 0 auto

  .flex-control-paging
    position absolute
    top 0
    left 0
    right 0
    z-index 44
    cursor pointer

    li
      display inline-block
      margin-right 8px
      
      a
        display block
        overflow hidden
        height 8px
        width 8px
        text-indent -200%
        border-radius(12px)

        &:last-child
          margin-right 0

  .flex-direction-nav
    position absolute
    top 0
    right 0
    bottom 0
    left 0

    li
      position absolute
      height 100%
      width 40%
      overflow hidden

      a
        display block
        position absolute
        top 50%
        margin-top -60px
        width 100%
        height 120px
        line-height 120px
        font-family "fontello", display
        text-decoration none
        font-size 300%
        color white
        text-indent 200%

      &:first-child
        left -30%
        text-align left

      &:last-child
        right -30%
        text-align right

